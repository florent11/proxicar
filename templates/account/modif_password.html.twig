{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('password-strength-meter/password.css')}}">
{% endblock %}

{% block title %}Changement du mot de passe{% endblock %}

{% block body %}
    <div class="container modif-password-container">
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('user_panel') }}" class="fas fa-angle-left retour"> Retour</a>
                <h1 class="text-center">Changement du mot de passe</h1>
                <hr>
                {{ form_start(modifUserPasswordForm) }}
                    <div class="form-group">{{form_row(modifUserPasswordForm.plainPassword.first)}}</div> 
                    <div class="form-group">
                        {{ form_label(modifUserPasswordForm.plainPassword.second) }}
                        {{ form_widget(modifUserPasswordForm.plainPassword.second) }}
                        <div class="invalid-feedback">Les mots de passe doivent Ãªtre identiques.</div>
                    </div>
                    <button class="btn btn-lg btn-primary" type="submit">Valider</button>
                {{ form_end(modifUserPasswordForm) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{asset('password-strength-meter/password.js')}}"></script>
    <script src="{{asset('js/passwordStrengthMeterInit.js')}}"></script>
    <script src="{{asset('js/comparePassword.js')}}"></script>
{% endblock %}