{% extends 'base.html.twig' %}

{% block title %}Changement du mot de passe{% endblock %}

{% block body %}
<div class="container">
        <div class="row">
            <div class="col-md-8">
                <a href="{{ path('user_panel') }}" class="fas fa-angle-left retour"> Retour</a>
                <h1>Changement du mot de passe</h1>
    
                {{ form_start(modifUserPasswordForm) }}
                    <div class="form-group">{{form_row(modifUserPasswordForm.plainPassword.first)}}</div> 
                    <div class="form-group">{{form_row(modifUserPasswordForm.plainPassword.second)}}</div> 
                    <button class="btn btn-lg btn-primary" type="submit">Valider</button>
                {{ form_end(modifUserPasswordForm) }}
            </div>
        </div>
    </div>
{% endblock %}