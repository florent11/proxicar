{% extends 'base.html.twig' %}

{% block title %}Renouvellement du mot de passe{% endblock %}

{% block body %}
<div class="container">
        <div class="row">
            <div class="col-md-8">
                <h1>Renouvellement du mot de passe</h1>
    
                {{ form_start(resettingForm) }}
                    <div class="form-group">{{form_row(resettingForm.plainPassword.first)}}</div> 
                    <div class="form-group">{{form_row(resettingForm.plainPassword.second)}}</div> 
                    <button class="btn btn-lg btn-primary" type="submit">Valider</button>
                {{ form_end(resettingForm) }}
            </div>
        </div>
    </div>
{% endblock %}