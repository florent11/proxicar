{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{asset('password-strength-meter/password.css')}}">
{% endblock %}

{% block title %}Renouvellement du mot de passe{% endblock %}

{% block body %}
    <div class="reset-password-background">
        <div class="reset-password-container">
            {{ form_start(resettingForm, {'attr': {'data-aos': 'fade-up'}}) }}
                <h1 class="text-center">Renouvellement du mot de passe</h1>
                <hr>
                <div class="form-group">{{form_row(resettingForm.plainPassword.first)}}</div> 
                <div class="form-group">
                    {{ form_label(resettingForm.plainPassword.second) }}
                    {{ form_widget(resettingForm.plainPassword.second) }}
                    <div class="invalid-feedback">Les mots de passe doivent Ãªtre identiques.</div>
                </div> 
                <button class="btn btn-lg btn-primary" type="submit">Valider</button>
            {{ form_end(resettingForm) }}
        </div>
    </div>      
{% endblock %}

{% block javascripts %}
    <script src="{{asset('password-strength-meter/password.js')}}"></script>
    <script src="{{asset('js/passwordStrengthMeterInit.js')}}"></script>
    <script src="{{asset('js/comparePassword.js')}}"></script>
{% endblock %}

