{% extends 'base.html.twig' %}

{% block title %}Annonces - Proxi'Car{% endblock %}

{% block body %}

<div class="container">
    {% if annonce.annavalider == true %}
        <div class="alert alert-info" role="alert">
            Annonce en attente de validation par l'administrateur.
        </div>
    {% endif %}
    {% if annonce.annsignaler == true %}
        <div class="alert alert-danger" role="alert">
            Annonce en attente de modération par l'administrateur.
        </div>
    {% endif %} 
    {% if annonce.annactive == false %}
        <div class="alert alert-warning" role="alert">
            Annonce inactive.
        </div>
    {% endif %}
    <h1>L'annonce</h1>
        <p> Mise en ligne le {{ annonce.anndate|localizeddate('none', 'none', null, null, 'd MMMM Y') }} </p> 
        <p> Par {{ annonce.users.pseudo }} </p>
        <p> {{ annonce.anntitre }} </p>
        <p> {{ annonce.anncontenu|raw }} </p> 
        <p> {{ annonce.annprix }} Euros </p>
        {% if annonce.annsignaler == true %}
            <p>
                Annonce en attente de modération.
            </p>
        {% elseif annonce.annmoderee == true %}
            Annonce modéréé par l'administrateur.
        {% else %}
            <a class="signaler-annonce" href="{{ path('signaler_annonce', {'id': annonce.id}) }}">Signaler un abus</a>
        {% endif %}
        
        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="5"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="6"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="7"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                <img class="d-block w-100" src="{{ vich_uploader_asset(annonce, 'imageFile')|imagine_filter('article') }}" alt="Image">
                </div>
                <div class="carousel-item">
                <img class="d-block w-100" src="{{ vich_uploader_asset(annonce, 'imageFile')|imagine_filter('article') }}" alt="Image">
                </div>
                <div class="carousel-item">
                <img class="d-block w-100" src="{{ vich_uploader_asset(annonce, 'imageFile')|imagine_filter('article') }}" alt="Image">
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
</div>

{% endblock %}

{% block javascripts %}
    <script src="{{asset('js/carouselCarAnn.js')}}"></script>
{% endblock %}
