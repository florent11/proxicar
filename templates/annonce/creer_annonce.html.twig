{% extends 'base.html.twig' %}

{% block title %}Création de l'annonce{% endblock %}

{% block stylesheets %} 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />
{% endblock %}

{% block body %}
    <div class="container creer-annonce-container">
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}
        <div class="row">
            <div class="col-md-12">
                <a href="{{ path('user_panel') }}" class="fas fa-angle-left retour"> Retour</a>
                <h1 class="text-center">Création de l'annonce</h1>
                <hr>
                {{ form_start(creerAnnonceForm) }}
                    <div class="form-group">{{ form_row(creerAnnonceForm.ann_titre) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.marque) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.modele) }}</div> 
                    <div class="form-group">{{ form_row(creerAnnonceForm.annee_modele) }}</div>
                    <div class="form-group">
                        {{ form_label(creerAnnonceForm.kilometre) }}
                        <div class="input-group">
                            {{ form_widget(creerAnnonceForm.kilometre) }}
                            <div class="input-group-append">
                                <span class="input-group-text">KM</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.carburant) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.boite_de_vitesse) }}</div>
                    <div class="form-group">
                        {{ form_label(creerAnnonceForm.ann_prix) }}
                        <div class="input-group">
                            {{ form_widget(creerAnnonceForm.ann_prix) }}
                            <div class="input-group-append">
                                <span class="input-group-text">€</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        {{ form_label(creerAnnonceForm.cv) }}
                        <div class="input-group">
                            {{ form_widget(creerAnnonceForm.cv) }}
                            <div class="input-group-append">
                                <span class="input-group-text">CV</span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.region) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.departement) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.ville) }}</div>
                    <div class="form-group images">{{ form_row(creerAnnonceForm.images) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.ann_contenu) }}</div>
                    <button class="btn btn-lg btn-primary" type="submit">Publier</button>
                {{ form_end(creerAnnonceForm) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js"></script>
    <script src="{{asset('js/jsUpload.js')}}"></script>
{% endblock %}