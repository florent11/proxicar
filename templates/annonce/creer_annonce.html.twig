{% extends 'base.html.twig' %}

{% block title %}Création de l'annonce{% endblock %}

{% block body %}
<div class="container">
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ message }}
        </div>
    {% endfor %}
        <div class="row">
            <div class="col-md-8">
                <a href="{{ path('user_panel') }}" class="fas fa-angle-left retour"> Retour</a>
                <h1>Création de l'annonce</h1>
    
                {{ form_start(creerAnnonceForm) }}
                    <div class="form-group">{{ form_row(creerAnnonceForm.ann_titre) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.marque) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.modele) }}</div> 
                    <div class="form-group">{{ form_row(creerAnnonceForm.annee_modele) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.kilometre) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.carburant) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.boite_de_vitesse) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.ann_prix) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.cv) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.region) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.departement) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.ville) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.images) }}</div>
                    <div class="form-group">{{ form_row(creerAnnonceForm.ann_contenu) }}</div>

                    <button class="btn btn-lg btn-primary" type="submit">Publier</button>
                {{ form_end(creerAnnonceForm) }}
            </div>
        </div>
    </div>
{% endblock %}